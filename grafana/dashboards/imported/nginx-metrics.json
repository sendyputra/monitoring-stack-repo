{
  "id": null,
  "uid": "nginx-metrics",
  "title": "Nginx Gateway",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Request Rate (req/s)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        { "expr": "sum(rate(nginx_http_requests_total[1m]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s", "decimals": 2 }, "overrides": [] },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Accepted (Δ)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        { "expr": "sum(increase(nginx_connections_accepted[$__range]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "connections" }, "overrides": [] }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Handled (Δ)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        { "expr": "sum(increase(nginx_connections_handled[$__range]))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "connections" }, "overrides": [] }
    },
    {
      "id": 4,
      "type": "gauge",
      "title": "Active Connections",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        { "expr": "nginx_connections_active", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "connections", "max": 100 }, "overrides": [] },
      "options": { "showThresholdLabels": false, "showThresholdMarkers": true }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Connection States",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        { "expr": "nginx_connections_active", "legendFormat": "active", "refId": "A" },
        { "expr": "nginx_connections_reading", "legendFormat": "reading", "refId": "B" },
        { "expr": "nginx_connections_writing", "legendFormat": "writing", "refId": "C" },
        { "expr": "nginx_connections_waiting", "legendFormat": "waiting", "refId": "D" }
      ],
      "fieldConfig": { "defaults": { "unit": "connections" }, "overrides": [] }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Requests per second",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        { "expr": "rate(nginx_http_requests_total[1m])", "legendFormat": "req/s", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "req/s", "decimals": 2 }, "overrides": [] }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Exporter Health",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 12 },
      "targets": [
        { "expr": "avg(nginx_up)", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "min": 0, "max": 1 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    }
  ],
  "templating": { "list": [] }
}
