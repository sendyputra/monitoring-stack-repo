{
  "id": null,
  "uid": "stack-overview",
  "title": "Stack Overview",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Host CPU Usage (%)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "avg by (instance) ((1 - avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100)",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 1 }, "overrides": [] }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Host Memory Available (%)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "avg by (instance) (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100)",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 1 }, "overrides": [] }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Core Services Up",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 7 },
      "targets": [
        {
          "expr": "up{job=~\"prometheus|loki|tempo|mimir|pyroscope|grafana|otel_collector|alertmanager\"}",
          "refId": "A",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "decimals": 0 }, "overrides": [] }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Targets Down",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 7 },
      "targets": [
        {
          "expr": "count(up{job=~\"prometheus|loki|tempo|mimir|pyroscope|grafana|otel_collector|alertmanager\"} == 0)",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "min": 0 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Container CPU %",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "sum by (container) (rate(container_cpu_usage_seconds_total{container=~\"grafana|prometheus|loki|tempo|pyroscope|mimir|otel_collector|alertmanager\"}[1m])) * 100",
          "refId": "A",
          "legendFormat": "{{container}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 2 }, "overrides": [] }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Container Memory (MiB)",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{container=~\"grafana|prometheus|loki|tempo|pyroscope|mimir|otel_collector|alertmanager\"} / 1024 / 1024",
          "refId": "A",
          "legendFormat": "{{container}}"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "mbytes", "decimals": 1 }, "overrides": [] }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "Alerts Firing",
      "datasource": { "type": "prometheus", "uid": "PROMETHEUS_DS" },
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "min": 0 }, "overrides": [] }
    },
    {
      "id": 8,
      "type": "logs",
      "title": "Stack Logs",
      "datasource": { "type": "loki", "uid": "LOKI_DS" },
      "gridPos": { "h": 12, "w": 18, "x": 6, "y": 22 },
      "targets": [
        {
          "expr": "{job=~\"grafana|prometheus|loki|tempo|pyroscope|mimir|otel_collector|promtail\"}",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": { "list": [] }
}
